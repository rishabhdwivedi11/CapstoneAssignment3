<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurantAssignment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Hunger Point</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Customers</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item"
                                   asp-area="HungerPoint" asp-controller="Customers" asp-action="Create">Add Customers</a>
                                <a class="dropdown-item"
                                   asp-area="HungerPoint" asp-controller="Menus" asp-action="Index">Menu Card</a>
                                <a class="dropdown-item"
                                   asp-area="HungerPoint" asp-controller="Orders" asp-action="Create">Place a order</a>
                               

                            </div>
               
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Admin Manage</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item"
                                   asp-area="HungerPoint" asp-controller="Categories" asp-action="Index">Add Categories</a>
                                <a class="dropdown-item"
                                   asp-area="HungerPoint" asp-controller="Menus" asp-action="Create">Add Menus</a>

                            </div>
                    </ul>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



   

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
